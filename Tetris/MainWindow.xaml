<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Foreground="White"
        Title="Tetris" MinHeight="600" MinWidth="800"
        Height="600" Width="800">

    <Grid Background="#213555">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Row="1" Grid.Column="1" Margin="0 0 0 20">
            <Canvas x:Name="GameCanvas"
                    Background="#3E5879" 
                    Width="250" Height="500"
                    ClipToBounds="True"
                    Loaded="GameCanvas_Loaded"/>
        </Viewbox>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="0">
            <Image Source="/Resources/crown.ico" 
                   Width="24"
                   Height="24"
                   Margin="0 0 5 0"/>
            <TextBlock x:Name="BestScoreText"
                   FontSize="24"
                   Foreground="#FFD700">
            </TextBlock>
        </StackPanel>
        

        <TextBlock x:Name="ScoreText"
                   Grid.Row="0"
                   Grid.Column="1"
                   FontSize="28"
                   TextAlignment="Center"
                   Margin="0 10"/>

        <TextBlock x:Name="CurrentLevel"
                   Grid.Row="2"
                   FontSize="24"
                   TextAlignment="Right"
                   Margin="5 0"/>

        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10">
            <TextBlock Text="Next"
                       FontSize="28"
                       TextAlignment="Center"/>
            <Border Background="#3E5879"
                    
                    CornerRadius="10">
                <Image x:Name="NextImage"
                       Margin="20"
                       Width="125"/>
            </Border>
        </StackPanel>

        <local:customButton 
            ButtonWidth="45" 
            ButtonHeight="45" 
            ButtonColor="#3E5879" 
            BackgroundColor="#2F435B" 
            Icon="/Resources/pause.ico"
            HorizontalAlignment="Left"
            Margin="0 1 0 1"
            Grid.Column="2"
            Grid.Row="0"
            ButtonClick="OpenSettings_Click"/>

        <Grid x:Name="GameOverMenu"
              Background="#CC000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Panel.ZIndex="1"
              Visibility="Hidden">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <TextBlock Text="Game Over" 
                           TextAlignment="Center"
                           FontSize="36"/>

                <TextBlock x:Name="FinalScoreText"
                           Text="Score: "
                           FontSize="28"
                           TextAlignment="Center"/>

                <local:customButton 
                        ButtonWidth="200"
                        FontSize="26"
                        ButtonHeight="45" 
                        ButtonColor="#3E5879" 
                        BackgroundColor="#2F435B" 
                        Icon="/Resources/restart.ico"
                        Text=" Play again"
                        ButtonClick="PlayAgain_Click"
                        Margin="0 20 0 0"/>

            </StackPanel>
        </Grid>

        <Grid x:Name="SettingsMenu"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Background="#CC000000"
              Panel.ZIndex="1"
              Visibility="Hidden">
            <Border Background="#213555"
                    Width="300"
                    Height="350"
                    CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Pause" 
                                   Grid.Row="0"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"/>
                    <local:customButton 
                        ButtonWidth="50"
                        FontSize="20"
                        ButtonHeight="45" 
                        ButtonColor="Transparent" 
                        BackgroundColor="Transparent"
                        Icon="/Resources/cross.ico"
                        Margin="0"
                        HorizontalAlignment="Right"
                        ButtonClick="CloseSettings_Click"/>
                    <Border Background="#3E5879"
                            Grid.Row="1"
                            Margin="10 0 10 10"
                            CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <local:customButton 
                                ButtonWidth="100"
                                FontSize="20"
                                ButtonHeight="45" 
                                ButtonColor="Transparent" 
                                BackgroundColor="Transparent"
                                Icon="/Resources/restart.ico"
                                Text=" Restart"
                                Margin="0"
                                ButtonClick="PlayAgain_Click"/>

                            <local:customButton 
                                ButtonWidth="100"
                                FontSize="20"
                                ButtonHeight="45" 
                                ButtonColor="Transparent" 
                                BackgroundColor="Transparent"
                                Icon="/Resources/exit.ico"
                                Text=" Exit"
                                Margin="0"
                                Grid.Row="0"
                                Grid.Column="1"
                                ButtonClick="ExitButton_Click"/>

                            <local:customButton 
                                ButtonWidth="250"
                                FontSize="26"
                                ButtonHeight="45" 
                                ButtonColor="#A0D683" 
                                BackgroundColor="#72BF78"
                                Text="Level 1"
                                Margin="0"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Tag="1"
                                ButtonClick="SelectLevel_Click"/>
                            <local:customButton 
                                ButtonWidth="250"
                                FontSize="26"
                                ButtonHeight="45" 
                                ButtonColor="#FF9B45" 
                                BackgroundColor="#CA7842"
                                Text="Level 2"
                                Margin="0"
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Tag="2"
                                ButtonClick="SelectLevel_Click"/>
                            <local:customButton 
                                ButtonWidth="250"
                                FontSize="26"
                                ButtonHeight="45" 
                                ButtonColor="#CD5656" 
                                BackgroundColor="#AF3E3E"
                                Text="Level 3"
                                Margin="0"
                                Grid.Row="3"
                                Grid.ColumnSpan="2"
                                Tag="3"
                                ButtonClick="SelectLevel_Click"/>
                        </Grid>
                    </Border>

                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
